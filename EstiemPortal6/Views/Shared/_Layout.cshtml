@*This is the layout file. It acts as a basis for all views and the views are placed in the
  @RenderBody() section of the layout.*@
<!DOCTYPE html>@*HTML5 Doctype*@
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @**This is the title that you see as the name of the tab
       Each View should have a ViewBag.Title defined to differentiate the pages.
       For Example: ESTIEM Mobile - Events*@
    <title>ESTIEM Mobile - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/less")
    @Styles.Render("~/Content/dataTables")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</head>
<body>
    <div class="main-menu navbar navbar-inverse" style="margin-bottom:0;">
        @Html.Action("_MainMenu", "Home")
    </div>

    <div class="container">
        <div class="row">
            <div class="container body-content">
                @RenderBody()
            </div>
        </div>
    </div>

